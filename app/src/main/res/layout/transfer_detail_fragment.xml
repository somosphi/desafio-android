<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.DetailFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.example.pedroneryphi.viewmodel.DetailViewModel" />

        <variable
            name="fragment"
            type="com.example.pedroneryphi.view.fragments.DetailFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fullDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <androidx.cardview.widget.CardView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toolbarHeader="Comprovante"
            app:toolbarBack="true"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <com.example.pedroneryphi.components.BaseToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:toolbarHeader="Comprovante"
                app:toolbarBack="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutInformations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:paddingStart="@dimen/size20"
            android:background="@color/white"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:text="@string/typeMovimentation"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={viewmodel.transferDetail.description}"
                android:layout_marginTop="@dimen/size6"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textSize14"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:text="@string/value"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size6"
                android:text="@={viewmodel.transferDetail.value}"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textSize14"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:text="@string/receiver"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size6"
                android:text="@={viewmodel.transferDetail.name}"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textSize14"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:text="@string/authentication"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size6"
                android:text="@string/phiBank"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textSize14"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:text="@string/dateHour"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size6"
                android:text="@={viewmodel.transferDetail.data}"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textSize14"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:text="@string/authentication"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvAuthentication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size6"
                android:text="@={viewmodel.transferDetail.authentication}"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/textSize14"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <Button
            android:id="@+id/btShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/share"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="@dimen/size15"
            android:layout_marginEnd="@dimen/size15"
            android:layout_marginBottom="@dimen/size15"
            android:background="@color/primaryGreen"
            android:elevation="5dp"
            android:onClick="@{() -> fragment.shareTransfer()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>