<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vertical_divider_top"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/name_marcation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="2dp"/>

    <ImageView
        android:id="@+id/name_marcation"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/round_icon_from_adapter"
        app:layout_constraintBottom_toBottomOf="@+id/label_recived"
        app:layout_constraintEnd_toEndOf="@+id/vertical_divider_top"
        app:layout_constraintStart_toStartOf="@+id/vertical_divider_top"
        app:layout_constraintTop_toTopOf="@+id/label_recived"
        android:elevation="2dp"/>

    <View
        android:id="@+id/background_operation_pix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_operation_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:textColor="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/vertical_divider_top"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Transferencia enviada"
        android:background="#B3B3B3"/>

    <TextView
        android:id="@+id/label_recived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#B3B3B3"
        android:text="David Bond"
        android:textColor="#B3B3B3"
        app:layout_constraintStart_toStartOf="@+id/label_operation_type"
        app:layout_constraintTop_toBottomOf="@+id/label_operation_type" />

    <TextView
        android:id="@+id/label_operation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_recived"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/label_recived"
        app:layout_constraintTop_toTopOf="@+id/label_recived"
        android:text="13/10"
        android:textColor="#B3B3B3"
        android:background="#B3B3B3"/>

    <TextView
        android:id="@+id/label_operation_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#B3B3B3"
        android:text="-R$ 100,00"
        android:textColor="#B3B3B3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_recived"
        app:layout_constraintTop_toBottomOf="@+id/label_recived" />

    <View
        android:id="@+id/vertical_divider_bottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/name_marcation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>