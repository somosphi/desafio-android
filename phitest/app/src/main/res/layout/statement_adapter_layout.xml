<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vertical_divider_top"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/name_marcation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/name_marcation"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/round_icon_from_adapter"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/label_recived"
        app:layout_constraintEnd_toEndOf="@+id/vertical_divider_top"
        app:layout_constraintStart_toStartOf="@+id/vertical_divider_top"
        app:layout_constraintTop_toTopOf="@+id/label_recived" />

    <View
        android:id="@+id/vertical_divider_bottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/name_marcation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/background_operation_pix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/label_operation_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/vertical_divider_top"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Transferencia enviada" />

    <TextView
        android:id="@+id/label_recived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/label_operation_type"
        app:layout_constraintTop_toBottomOf="@+id/label_operation_type"
        tools:text="David Bond" />

    <LinearLayout
        android:id="@+id/card_pix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/ligth_green"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/label_operation_date"
        app:layout_constraintEnd_toEndOf="@+id/label_operation_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pix"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/label_operation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_recived"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/label_recived"
        app:layout_constraintTop_toTopOf="@+id/label_recived"
        tools:text="13/10" />

    <TextView
        android:id="@+id/label_operation_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_recived"
        app:layout_constraintTop_toBottomOf="@+id/label_recived"
        tools:text="-R$ 100,00" />



</androidx.constraintlayout.widget.ConstraintLayout>